@import 'constants';
@import 'elements/nav/constants';
@import 'zindex';
    
html {
    box-sizing: border-box;
    overflow-x: hidden;
}
*,
*:before,
*:after {
    box-sizing: inherit;
}

body, html {
    height: 100%;
}

    
a {
    text-decoration: none;
    &:hover {
        text-decoration: underline;
    }
}

body {
    background: $color--greyscale--lighter;
    font: 15px/1 $font-stack--sans;
}

#site-header {
    align-items: center;
    background: $color--header--background;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    min-height: 60px;
    padding: 0 5px;
    position: relative;
    z-index: $zindex--header;

    +mq--desktop-nav() {
        min-height: 60px;
        padding: 0 20px;
    }
    
    h1 {
        align-items: center;
        display: flex;
        height: 50px;
        order: 2;
    }
    
    // Marketplace logo.
    .wordmark {
        image-replacement('../img/logo/rocket-color.svg', 26px, 40px);
    }
    
    // Project name, appearing to the right of the Marketplace logo.
    .site-name {
        border-left: 1px solid $color--header--separator;
        color: $color--header--site-name;
        display: none;
        font-size: 16px;
        font-weight: 300;
        margin-left: 8px;
        padding: 4px 0 4px 12px;
        relative: top 1px;  // Aligns baseline the wordmark's baseline;
    }
    
    // Hamburger icon that toggles the menu visibility at smaller screen sizes.
    .hamburger {
        image-replacement('../img/icon/menu.svg', 40px, 40px);
        background-position: 0 0;
        background-size: 40px 140px;
        appearance: none;
        border: 0;
        cursor: pointer;
        display: inline-block;
        order: 1;
        relative: left 5px;
        &:hover {
            background-position: 0 -50px;
        }
        &:active {
            background-position: 0 -100px;
        }
        +nav--visible() {
            background-position: 0 -100px;
        }
        +mq--desktop-nav() {
            display: none;
            order: 3;
        }
    }
    
    .shim {
        display: inline-block;
        order: 3;
        width: 40px;
    }

}

main,
#site-header {
    transition: transform cubic-bezier(0.86, 0, 0.07, 1) 333ms;
    
    .nav--show-l1 & {
        transform: translateX(260px);
    }
}


body > main {
    background: $color--greyscale--lighter;
    height 100%;
    min-height 100%;
    position: relative;
    z-index: $zindex--body;
}

#page {
    margin: 0 auto;
    max-width: $grid--max-content-width;
    padding: 15px;
    +mq--narrow-gutter() {
        padding: 40px 20px;
    }
}

#site-footer {
    type--footer();
    align-items: center;
    background: $color--greyscale--white;
    display: flex;
    justify-content: center;
    padding: 20px;
    
    // Remove from the document flow and hide. Can't use display: none due to
    // https://github.com/tj/nib/issues/291
    position: absolute;
    visibility: hidden;
    +mq--show-footer() {
        position: relative;
        visibility: visible;
    }

    a {
        color: $color--footer--link;
        font-weight: 400;
    }
    h1 {
        width: 100px;
        a {
            image-replacement('../img/logo-footer.png', 81px, 21px);
        }
    }
    p {
        border-left: 1px solid $color--footer--separator;
        border-width: 0 1px;
        margin-left: 10px;
        max-width: 600px;
        padding: 0 50px 0 10px;
    }
    nav {
        border-left: 1px solid $color--footer--separator;
        padding-left: 10px;
        width: 200px;
    }
}
